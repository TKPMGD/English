<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/id"
        android:paddingRight="30dp"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <ImageView
        android:id="@+id/again"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/refresh"
        app:layout_constraintTop_toTopOf="@id/id"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    <View
        android:visibility="invisible"
        android:id="@+id/againsp"
        app:layout_constraintEnd_toStartOf="@id/again"
        android:layout_width="12dp"
        android:layout_height="20dp" />
    <ImageView
        android:id="@+id/dungsai"
        app:layout_constraintEnd_toStartOf="@id/againsp"
        android:src="@drawable/incorrect"
        app:layout_constraintTop_toTopOf="@id/id"
        android:layout_width="24dp"
        android:layout_height="24dp" />

    <View
        android:visibility="invisible"
        android:id="@+id/againsp1"
        app:layout_constraintEnd_toStartOf="@id/dungsai"
        android:layout_width="12dp"
        android:layout_height="20dp" />

    <TextView
        android:text="If you have followed any of my previous tutorials about GCM"
        android:id="@+id/nddung"
        app:layout_constraintStart_toEndOf="@id/id"
        app:layout_constraintEnd_toStartOf="@id/againsp1"
        android:layout_width="0dp"
        android:layout_height="wrap_content" />

    <TextView
        android:textColor="@color/red"
        android:paddingTop="5dp"
        android:text="If you have followed any of my previous tutorials about GCM"
        android:id="@+id/nddoc"
        app:layout_constraintStart_toEndOf="@id/id"
        app:layout_constraintEnd_toStartOf="@id/againsp1"
        android:layout_width="0dp"
        app:layout_constraintTop_toBottomOf="@id/nddung"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>