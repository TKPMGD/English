<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="20dp"
    android:paddingVertical="10dp">

    <TextView
        android:id="@+id/id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="30dp"
        android:text="1" />


    <ImageView
        android:id="@+id/again"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/refresh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/id" />

    <View
        android:id="@+id/againsp"
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@id/again" />

    <ImageView
        android:id="@+id/dungsai"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/tick"
        app:layout_constraintEnd_toStartOf="@id/againsp"
        app:layout_constraintTop_toTopOf="@id/id" />

    <View
        android:id="@+id/againsp1"
        android:layout_width="12dp"
        android:layout_height="20dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toStartOf="@id/dungsai" />

    <TextView
        android:id="@+id/nddung"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="If you have followed any of my previous tutorials about GCM"
        app:layout_constraintEnd_toStartOf="@id/againsp1"
        app:layout_constraintStart_toEndOf="@id/id" />

    <ImageView
        android:id="@+id/arrow1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/icon_right_arrow"
        app:layout_constraintBottom_toBottomOf="@id/ndtl"
        app:layout_constraintStart_toStartOf="@id/nddung"
        app:layout_constraintTop_toTopOf="@id/ndtl" />

    <TextView
        android:id="@+id/ndtl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="If you have followed any of my previous tutorials about GCM"
        app:layout_constraintEnd_toStartOf="@id/againsp1"
        app:layout_constraintStart_toEndOf="@id/arrow1"
        app:layout_constraintTop_toBottomOf="@id/nddung" />

    <ImageView
        android:id="@+id/arrow2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/icon_right_arrow"
        app:layout_constraintBottom_toBottomOf="@id/nddoc"
        app:layout_constraintStart_toStartOf="@id/nddung"
        app:layout_constraintTop_toTopOf="@id/nddoc" />

    <TextView
        android:id="@+id/nddoc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="If you have followed any of my previous tutorials about GCM"
        android:textColor="@color/red"
        app:layout_constraintEnd_toStartOf="@id/againsp1"
        app:layout_constraintStart_toEndOf="@id/arrow1"
        app:layout_constraintTop_toBottomOf="@id/ndtl" />
</android.support.constraint.ConstraintLayout>